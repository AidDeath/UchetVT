<Window x:Class="UchetVT.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UchetVT"
        mc:Ignorable="d"
        Title="Пароль" Height="185.734" Width="346.26" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="Pass" Text="Введите пароль для пользователя:" Margin="5"/>
        <PasswordBox Grid.Row="1" Margin="3"/>
        <TextBlock Name="PassConfirm" Grid.Row="2" Text="Повторите ввод пароля:" Margin="5"/>
        <PasswordBox Grid.Row="3" Margin="3"/>

        <Button IsDefault="True" Grid.Row="4" Content="OK" Width="150" HorizontalAlignment="Left" Margin="10,4,0,4" Click="OkClick"/>
        <Button IsCancel="True" Grid.Row="4" Content="Отмена" Width="150" HorizontalAlignment="Right" Margin="10,4,10,4"/>

    </Grid>
</Window>
