<Window x:Class="UchetVT.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UchetVT"
        mc:Ignorable="d"
        Title="Пароль" Height="129.734" Width="339.26" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Это новый пользователь, введите для него пароль:" Margin="5"/>
        <PasswordBox  Name="Pass" Grid.Row="1" Margin="20,3,20,6" Width="288"/>

        <Button IsDefault="True" Grid.Row="4" Content="OK" Width="100" HorizontalAlignment="Left" Margin="40,7,0,4" Click="OkClick"/>
        <Button IsCancel="True" Grid.Row="4" Content="Отмена" Width="100" HorizontalAlignment="Right" Margin="0,7,40,4"/>

    </Grid>
</Window>
